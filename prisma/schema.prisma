// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id          String   @id @unique @default(uuid())
  tech        String[]
  title       String
  description String
  banner      String
  url         String
  repo        String
  createdAt   DateTime @default(now())
}

model Post {
  id        String   @id @unique @default(uuid())
  tech      String
  title     String
  content   String
  banner    String
  createdAt DateTime @default(now())
}
